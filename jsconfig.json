{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "_p": ["./public/*"],
      "@/*": ["./src/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}